                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-full btn-lg">Submit</button>
                            </form>*@
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!--/ Login area -->
</section>
<!-- LOGIN FORM SECTION END -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
